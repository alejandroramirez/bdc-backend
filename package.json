{
  "name": "bdc-backend",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "npm run typecheck && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "$npm_execpath run build && vite preview",
    "deploy": "$npm_execpath run build && wrangler deploy",
    "deploy:staging": "$npm_execpath run build && wrangler deploy --env staging",
    "deploy:production": "$npm_execpath run build && wrangler deploy --env production",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.0",
    "hono": "^4.9.6",
    "stoker": "^2.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.2",
    "@cloudflare/vite-plugin": "^1.2.3",
    "eslint": "^9.34.0",
    "eslint-plugin-format": "^1.0.1",
    "prettier": "^3.6.2",
    "vite": "^6.3.5",
    "wrangler": "^4.17.0"
  }
}
